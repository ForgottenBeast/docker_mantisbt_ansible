{% macro wpkey(key) %}
{{ key }}
{% endmacro %}

version: "2"
volumes:
  {{ MANTIS_DB_VOLUME }}:
    external: True
  {{ MANTIS_VOLUME }}:
    external: True

services:

  mantisbt:
    image: vimagick/mantisbt:latest
    environment:
     VIRTUAL_HOST: {{ mantis_domain_name }}
{% if SSL == True %}
     LETSENCRYPT_HOST: {{ mantis_domain_name }}
     LETSENCRYPT_EMAIL: {{ mantis_letsencrypt_mail }}
     LETSENCRYPT_TEST: "{{ letsencrypt_testmode }}"
{% endif %}

    links:
      - mysql
    restart: always

  mysql:
    image: mariadb:latest
    environment:
      - MYSQL_ROOT_PASSWORD={{DB_ROOT_PASSWORD}}
      - MYSQL_DATABASE={{MANTIS_DB_NAME}}
      - MYSQL_ROOT_USER={{DB_ROOT_USER}}
      - MYSQL_USER={{DB_USER}}
      - MYSQL_PASSWORD={{DB_PASSWORD}}
    restart: always

{% if ADD_NGINX_PROXY %}
  nginx:
    image: jwilder/nginx-proxy
    restart: always
    ports:
      - "{{mantis_ip_addr}}:443:443"
      - "{{mantis_ip_addr}}:80:80"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - "/etc/nginx/vhost.d"
      - "/usr/share/nginx/html"
      - "/etc/nginx/certs"

  letsencrypt_nginx_companion:
    image: jrcs/letsencrypt-nginx-proxy-companion
    restart: always
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
    volumes_from:
      - "nginx"

{% endif %}
  torhh:
    restart: always
    image: goldy/tor-hidden-service
    links:
      - mantisbt
    environment:
      MANTISBT_KEY: |
{{ wpkey(tor_hidden_service_private_key) | indent(8,True) }}
        
      MANTIS_BT_PORTS: {{MANTIS_EXT_PORT}}:80

{% if TOR_HH %}
